{
  "name": "m-accounting - Python Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installGitLFS": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "username": "marusya",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14",
      "installPath": "/usr/local/python/current/bin",
      "installTools": true,
      "toolsToInstall": "uv,uvx"
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/persistent_data,target=/persistent_data,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "MYPY_CACHE_DIR": "/data/mypy_cache",
    "UV_LINK_MODE": "copy"
  },

  "postCreateCommand": "uv sync --upgrade && uv run pre-commit install",

  "containerUser": "marusya",
  "remoteUser": "marusya",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "the0807.uv-toolkit",
        "matangover.mypy",
        "rioj7.vscode-json-validate",
        "remcohaszing.schemastore",
        "eriklynd.json-tools",
        "tamasfe.even-better-toml",
        "donjayamanne.githistory",
        "mhutchie.git-graph",
        "codezombiech.gitignore",
        "waderyan.gitblame",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "redhat.vscode-json",
        "GitHub.copilot",
        "ms-python.debugpy",
        "yzhang.markdown-all-in-one",
        "ms-toolsai.vscode-jupyter-slideshow",
        "bierner.markdown-emoji",
        "bierner.markdown-checkbox",
        "DavidAnson.vscode-markdownlint",
        "bierner.markdown-preview-github-styles",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "AykutSarac.jsoncrack-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/${localWorkspaceFolderBasename}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.diagnosticMode": "openFilesOnly",
        "python.analysis.diagnosticsSource": "Pylance",
        "python.analysis.stubPath": "stubs",
        "python.analysis.extraPaths": ["stubs"],
        "ruff.enable": true,
        "ruff.nativeServer": true,
        "mypy.enabled": true,
        "mypy.dmypyEnabled": true,
        "mypy.runUsingActiveInterpreter": true,
        "mypy.targets": [
          "/workspaces/m-accounting/"
        ],
        "mypy.args": [
          "--python-version=3.14"
        ],
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnPaste": true,
          "editor.formatOnType": true
        }
      }
    }
  }
}
